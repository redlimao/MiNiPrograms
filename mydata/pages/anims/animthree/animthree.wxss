/**animtwo.wxss**/
.contain{width:100%;padding: 30rpx 20rpx;box-sizing: border-box;}  
    .wrap{width: 100%;height: 104rpx;overflow: hidden;position: relative;}
    .img-a,.img-b{position: absolute;top: 0;left: 0;}
        .img-a{width: 1500rpx;height: 104rpx;animation:anim_a 6s linear infinite;}
        .img-b{width: 1500rpx;height: 104rpx;animation:anim_a 5s linear infinite;transform: translateX(-760rpx);}
        .img-c{width: 1500rpx;height: 104rpx;animation:anim_a 4s linear infinite;transform: translateX(-770rpx);}

@keyframes anim_a{
    0%{transform: translateX(-750rpx);}
    100%{transform: translateX(0rpx)}
}

@keyframes anim_b{
    0%{transform: translateX(-876rpx) rotateX(180deg);}
    100%{transform: translateX(0rpx) rotateX(180deg)}
}



