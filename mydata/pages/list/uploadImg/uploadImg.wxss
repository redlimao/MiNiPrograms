/**uploadImg.wxss**/
.wrap{padding: 40rpx;width: 100%;box-sizing: border-box;}
    .img-box{width: 100%;background-color:#ffffff;border: 1rpx solid #eeeeee;box-sizing: border-box;margin-bottom: 20rpx;height: 300rpx;position: relative;}
        .img-txt{width: 100%;height: 300rpx;display: flex;align-items: center;justify-content: center;font-size: 50rpx;color: #999999;position: absolute;top: 0;left: 0;z-index: 2;}
        .img{width: 100%;height: 300rpx;display:none;position: absolute;top: 0;left: 0;z-index: 3;}
        .btn-del{position: absolute;z-index: 4;right: -20rpx;top: -20rpx;}
        .img.on{display: block;}