/**pop.wxss**/
.contain{width:100%;padding: 30rpx 20rpx;box-sizing: border-box;}
.btn{width: 180rpx;height: 60rpx;border-radius: 5rpx;line-height: 60rpx;text-align: center;background-color: #333;color: #fff;font-size: 30rpx;}
    .pop-bg{width: 100%;height: 100%;position: fixed;background-color: rgba(0,0,0,.5);top: 0;left: 0;display: none;}
    .pop-con{width: 500rpx;height: 500rpx;background-color: #fff;left: 50%;top: 50%;transform: translate(-50%,-50%);z-index: 2;position: absolute;display: none;}
        .close{font-size: 50rpx;width: 100rpx;height: 100rpx;position: absolute;right: 0;top: 0;color: #333;text-align: center;}
    .pop-bg.on{display: block;}
    .pop-con.on{display: block;}